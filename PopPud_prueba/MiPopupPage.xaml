<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopPud_prueba.MiPopupPage"
             xmlns:rg="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup">
    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center"
                     Padding="0"
                     Margin="0">
            <Frame WidthRequest="270"
                   HeightRequest="300"
                   Padding="15">
                <StackLayout>
                    <Image Source="https://cdn.pixabay.com/photo/2016/09/29/10/08/halloween-1702531_1280.jpg"
                           WidthRequest="70"
                           HeightRequest="80" />
                    <Label Text="Name:" />
                    <Entry Placeholder="Write your name" />
                    <Label Text="Last name:" />
                    <Entry Placeholder="Write your last name" />
                    <Button Text="Send"
                            BackgroundColor="#1094a1"
                            HeightRequest="35"
                            TextColor="White"
                            Clicked="Button_Clicked"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </StackLayout>
</rg:PopupPage>